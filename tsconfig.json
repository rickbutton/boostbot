{
    "compilerOptions": {
        "target": "esnext",
        "module": "commonjs",
        "lib": ["esnext"],
        "moduleResolution": "node",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "outDir": "out",
        "sourceMap": true,
        "strict": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": ["node_modules", "out"]
}